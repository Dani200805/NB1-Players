<Window x:Class="NB1_Players.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NB1 Játékos Adatbázis" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#f0f2f5">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush">#1a73e8</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryBrush">#34a853</SolidColorBrush>
        <SolidColorBrush x:Key="AccentBrush">#ea4335</SolidColorBrush>
        <SolidColorBrush x:Key="WarningBrush">#fbbc04</SolidColorBrush>
        <SolidColorBrush x:Key="LightBrush">#ffffff</SolidColorBrush>
        <SolidColorBrush x:Key="DarkBrush">#202124</SolidColorBrush>
        <SolidColorBrush x:Key="GrayBrush">#5f6368</SolidColorBrush>
        <SolidColorBrush x:Key="LightBlueBrush">#e8f0fe</SolidColorBrush>
        <SolidColorBrush x:Key="LightGreenBrush">#e6f4ea</SolidColorBrush>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#dadce0"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#dadce0"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" 
                Margin="0,0,0,15" Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="NB1 FOCISTÁK" 
                               FontSize="26" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,2"/>
                    <TextBlock Text="Játékos adatbázis kezelő" 
                               FontSize="13" Foreground="#e8f0fe"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="White" Padding="3" Margin="0,0,8,0">
                        <TextBox x:Name="SearchTextBox" Width="220" 
                                 TextChanged="SearchTextBox_TextChanged"
                                 Padding="12,8" FontSize="13"
                                 BorderThickness="0" Background="Transparent"
                                 Foreground="{StaticResource DarkBrush}"/>
                    </Border>
                    <Button Content="KERESÉS" Click="SearchButton_Click"
                            Background="{StaticResource SecondaryBrush}" 
                            Margin="0,0,4,0" Padding="18,10"/>
                    <Button Content="MIND" Click="ShowAllButton_Click"
                            Background="{StaticResource WarningBrush}" 
                            Foreground="{StaticResource DarkBrush}"
                            Margin="4,0,0,0" Padding="15,10"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" 
                    Margin="0,0,10,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource LightBlueBrush}" 
                            Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="90"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="JÁTÉKOS" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryBrush}"/>
                            <TextBlock Grid.Column="1" Text="POSZT" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="ÉRTÉK" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="KOR" FontWeight="Bold" 
                                       Foreground="{StaticResource PrimaryBrush}" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="PlayersListBox" 
                                 SelectionChanged="PlayersListBox_SelectionChanged"
                                 Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#f1f3f4" BorderThickness="0,0,0,1" 
                                            Padding="12,10" Background="White">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="90"/>
                                                <ColumnDefinition Width="110"/>
                                                <ColumnDefinition Width="90"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="SemiBold" FontSize="13"
                                                           Foreground="{StaticResource DarkBrush}"/>
                                                <TextBlock Text="{Binding Team}" 
                                                           Foreground="{StaticResource GrayBrush}" FontSize="11"
                                                           Margin="0,1,0,0"/>
                                            </StackPanel>

                                            <Border Grid.Column="1" Background="{StaticResource LightBlueBrush}" 
                                                    Padding="6,3" 
                                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Position}" 
                                                           FontWeight="SemiBold" FontSize="10"
                                                           Foreground="{StaticResource PrimaryBrush}"
                                                           HorizontalAlignment="Center"/>
                                            </Border>

                                            <TextBlock Grid.Column="2" 
                                                       Text="{Binding Value, StringFormat={}{0:C0}}"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       FontWeight="Bold" FontSize="12"
                                                       Foreground="{StaticResource SecondaryBrush}"/>

                                            <Border Grid.Column="3" Background="{StaticResource LightGreenBrush}" 
                                                    Padding="6,3" 
                                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Age, StringFormat={}{0} év}" 
                                                           FontWeight="SemiBold" FontSize="10"
                                                           Foreground="{StaticResource SecondaryBrush}"
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" 
                    BorderThickness="1" BorderBrush="#e8eaed">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="ADATLAP" 
                                   FontSize="18" FontWeight="Bold" 
                                   Foreground="{StaticResource PrimaryBrush}" 
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Button x:Name="NewButton" Content="ÚJ" Click="NewButton_Click"
                                    Background="{StaticResource WarningBrush}" 
                                    Foreground="{StaticResource DarkBrush}"
                                    Padding="18,8"/>
                            <Button x:Name="SaveButton" Content="MENTÉS" Click="SaveButton_Click"
                                    Background="{StaticResource SecondaryBrush}" 
                                    Padding="18,8" Margin="8,0,0,0"/>
                            <Button x:Name="UpdateButton" Content="MÓDOSÍT" Click="UpdateButton_Click"
                                    Background="{StaticResource PrimaryBrush}" 
                                    Padding="18,8" Margin="8,0,0,0"/>
                            <Button x:Name="DeleteButton" Content="TÖRÖL" Click="DeleteButton_Click"
                                    Background="{StaticResource AccentBrush}" 
                                    Padding="18,8" Margin="8,0,0,0"/>
                        </StackPanel>

                        <GroupBox Header="Személyes adatok">
                            <StackPanel Margin="0,8,0,0">
                                <Label Content="Teljes név"/>
                                <TextBox x:Name="NameTextBox"/>

                                <Label Content="Életkor"/>
                                <TextBox x:Name="AgeTextBox" PreviewTextInput="NumberValidationTextBox"/>

                                <Label Content="Nemzetiség"/>
                                <ComboBox x:Name="NationalityComboBox" IsEditable="True"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Sport adatok">
                            <StackPanel Margin="0,8,0,0">
                                <Label Content="Poszt"/>
                                <ComboBox x:Name="PositionComboBox" IsEditable="True"/>

                                <Label Content="Csapat"/>
                                <ComboBox x:Name="TeamComboBox" IsEditable="True"/>

                                <Label Content="Piaci érték (EUR)"/>
                                <TextBox x:Name="ValueTextBox" PreviewTextInput="NumberValidationTextBox"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Szerződés">
                            <StackPanel Margin="0,8,0,0">
                                <Label Content="Szerződés lejárta"/>
                                <DatePicker x:Name="ContractDatePicker"/>

                                <CheckBox x:Name="NationalTeamCheckBox" 
                                          Content="Válogatott játékos"
                                          FontWeight="SemiBold" Margin="0,12,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <Border Background="{StaticResource LightBrush}" 
                                Margin="0,15,0,0" Padding="12" BorderThickness="1" BorderBrush="#e8eaed">
                            <StackPanel x:Name="DetailsPanel">
                                <TextBlock Text="Részletek" 
                                           FontWeight="Bold" FontSize="13"
                                           Foreground="{StaticResource PrimaryBrush}" 
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="SelectedPlayerName" 
                                           FontWeight="SemiBold" FontSize="12"
                                           Foreground="{StaticResource DarkBrush}" 
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="SelectedPlayerDetails" 
                                           TextWrapping="Wrap" FontSize="11"
                                           Foreground="{StaticResource GrayBrush}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>