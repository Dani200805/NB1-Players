<Window x:Class="NB1_Players.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NB1 Játékos Adatbázis" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#f5f7fa">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryBrush">#2c3e50</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryBrush">#2ecc71</SolidColorBrush>
        <SolidColorBrush x:Key="AccentBrush">#e74c3c</SolidColorBrush>
        <SolidColorBrush x:Key="SuccessBrush">#2ecc71</SolidColorBrush>
        <SolidColorBrush x:Key="WarningBrush">#2ecc71</SolidColorBrush>
        <SolidColorBrush x:Key="LightBrush">#ffffff</SolidColorBrush>
        <SolidColorBrush x:Key="DarkBrush">#ffffff</SolidColorBrush>
        <SolidColorBrush x:Key="GrayBrush">#7f8c8d</SolidColorBrush>
        <SolidColorBrush x:Key="LightBlueBrush">#ecf0f1</SolidColorBrush>
        <SolidColorBrush x:Key="LightGreenBrush">#d5f4e6</SolidColorBrush>
        <SolidColorBrush x:Key="HeaderBrush">#34495e</SolidColorBrush>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#bdc3c7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#bdc3c7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource DarkBrush}"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#bdc3c7"/>
            <Setter Property="Background" Value="{StaticResource LightBrush}"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource HeaderBrush}" 
                CornerRadius="5" Margin="0,0,0,10" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="NB1 MAGYAR LABDARÚGÓK" 
                               FontSize="22" FontWeight="Bold" 
                               Foreground="White" Margin="0,0,0,2"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="White" CornerRadius="3" Padding="2" Margin="0,0,8,0">
                        <TextBox x:Name="SearchTextBox" Width="200" 
                             TextChanged="SearchTextBox_TextChanged"
                             Padding="10,6" FontSize="12"
                             BorderThickness="0" Background="Transparent"
                             Foreground="Gray"/>
                    </Border>
                    <Button Content="🔍 KERES" Click="SearchButton_Click"
                            Background="{StaticResource SuccessBrush}" 
                            Margin="0,0,4,0" Padding="12,6"/>
                    <Button Content="📋 ÖSSZES" Click="ShowAllButton_Click"
                            Background="{StaticResource WarningBrush}" 
                            Foreground="{StaticResource DarkBrush}"
                            Margin="4,0,0,0" Padding="12,6"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" 
                    CornerRadius="5" Margin="0,0,8,0" Padding="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource LightBlueBrush}" 
                            CornerRadius="5,5,0,0" Padding="10,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="110"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="140"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="JÁTÉKOS" FontWeight="Bold" 
                                Foreground="{StaticResource HeaderBrush}" FontSize="11"/>
                            <TextBlock Grid.Column="1" Text="CSAPAT" FontWeight="Bold" 
                                Foreground="{StaticResource HeaderBrush}" HorizontalAlignment="Center" FontSize="11"/>
                            <TextBlock Grid.Column="2" Text="POSZT" FontWeight="Bold" 
                                Foreground="{StaticResource HeaderBrush}" HorizontalAlignment="Center" FontSize="11"/>
                            <TextBlock Grid.Column="3" Text="KOR" FontWeight="Bold" 
                                Foreground="{StaticResource HeaderBrush}" HorizontalAlignment="Center" FontSize="11"/>
                            <TextBlock Grid.Column="4" Text="ÉRTÉK" FontWeight="Bold" 
                                Foreground="{StaticResource HeaderBrush}" HorizontalAlignment="Center" FontSize="11"/>
                        </Grid>
                    </Border>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ListBox x:Name="PlayersListBox" 
                                 SelectionChanged="PlayersListBox_SelectionChanged"
                                 Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#ecf0f1" BorderThickness="0,0,0,1" 
                                            Padding="10,8" Background="White">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="180"/>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="110"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="140"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Text="{Binding Name}" 
                                                   FontWeight="SemiBold" FontSize="12"
                                                   Foreground="{StaticResource DarkBrush}"/>
                                                <TextBlock Grid.Row="1" Text="{Binding Nationality}" 
                                                   Foreground="{StaticResource GrayBrush}" FontSize="9"
                                                   Margin="0,1,0,0"/>
                                            </Grid>

                                            <TextBlock Grid.Column="1" Text="{Binding Team}" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               FontWeight="Normal" FontSize="11"
                                               Foreground="{StaticResource SecondaryBrush}"/>

                                            <Border Grid.Column="2" Background="{StaticResource LightGreenBrush}" 
                                                CornerRadius="10" Padding="6,2" 
                                                HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Position}" 
                                                    FontWeight="SemiBold" FontSize="10"
                                                    Foreground="{StaticResource SuccessBrush}"
                                                    HorizontalAlignment="Center"/>
                                            </Border>

                                            <TextBlock Grid.Column="3" 
                                               Text="{Binding Age, StringFormat={}{0} év}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               FontWeight="Normal" FontSize="11"
                                               Foreground="{StaticResource WarningBrush}"/>

                                            <TextBlock Grid.Column="4" 
                                               Text="{Binding Value, StringFormat={}{0:C0}}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               FontWeight="Bold" FontSize="11"
                                               Foreground="{StaticResource AccentBrush}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" 
                    CornerRadius="5" BorderThickness="1" BorderBrush="#bdc3c7">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="12">
                        <Border Background="{StaticResource HeaderBrush}" CornerRadius="3" Padding="10,8" Margin="0,0,0,15">
                            <TextBlock Text="🎯 JÁTÉKOS ADATLAP" 
                                       FontSize="16" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center"/>
                        </Border>

                        <StackPanel>
                            <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Stretch">
                                <Button x:Name="NewButton" Content="🆕 ÚJ" Click="NewButton_Click"
                                Background="{StaticResource WarningBrush}" 
                                Foreground="{StaticResource DarkBrush}"
                                Padding="15,12" Margin="5"
                                FontSize="13" FontWeight="Bold"/>

                                <Button x:Name="SaveButton" Content="💾 MENTÉS" Click="SaveButton_Click"
                                Background="{StaticResource SuccessBrush}" 
                                Padding="15,12" Margin="5"
                                FontSize="13" FontWeight="Bold"/>

                                <Button x:Name="UpdateButton" Content="✏️ SZERKESZT" Click="UpdateButton_Click"
                                Background="{StaticResource SecondaryBrush}" 
                                Padding="15,12" Margin="5"
                                FontSize="13" FontWeight="Bold"/>

                                <Button x:Name="DeleteButton" Content="🗑️ TÖRÖL" Click="DeleteButton_Click"
                                Background="{StaticResource AccentBrush}" 
                                Padding="15,12" Margin="5"
                                FontSize="13" FontWeight="Bold"/>
                            </UniformGrid>
                        </StackPanel>

                        <GroupBox Header="👤 Alap információk">
                            <StackPanel Margin="0,8,0,0">
                                <Label Content="Teljes név"/>
                                <TextBox x:Name="NameTextBox"/>

                                <Label Content="Életkor (16-50)"/>
                                <TextBox x:Name="AgeTextBox" PreviewTextInput="NumberValidationTextBox"/>

                                <Label Content="Nemzetiség"/>
                                <ComboBox x:Name="NationalityComboBox" IsEditable="True"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="⚽ Sport információk">
                            <StackPanel Margin="0,8,0,0">
                                <Label Content="Poszt"/>
                                <ComboBox x:Name="PositionComboBox" IsEditable="True"/>

                                <Label Content="Csapat"/>
                                <ComboBox x:Name="TeamComboBox" IsEditable="True"/>

                                <Label Content="Piaci érték (EUR)"/>
                                <TextBox x:Name="ValueTextBox" PreviewTextInput="NumberValidationTextBox"/>
                            </StackPanel>
                        </GroupBox>

                        <Border Background="{StaticResource LightBlueBrush}" CornerRadius="5"
                                Margin="0,15,0,0" Padding="12" BorderThickness="1" BorderBrush="#bdc3c7">
                            <StackPanel x:Name="DetailsPanel">
                                <TextBlock Text="📋 Kiválasztott játékos részletei" 
                                           FontWeight="Bold" FontSize="12"
                                           Foreground="{StaticResource HeaderBrush}" 
                                           Margin="0,0,0,8"/>
                                <Border Background="White" CornerRadius="3" Padding="8" Margin="0,0,0,8">
                                    <TextBlock x:Name="SelectedPlayerName" 
                                               FontWeight="Bold" FontSize="13"
                                               Foreground="{StaticResource AccentBrush}" 
                                               HorizontalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="SelectedPlayerDetails" 
                                           TextWrapping="Wrap" FontSize="11"
                                           Foreground="{StaticResource DarkBrush}" LineHeight="16"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>